<h1>Listing posts</h1><table class="table table-striped">  <thead>    <tr>      <th>Title</th>      <th>Event date</th>      <th>Body</th>      <th>Image</th>      <th colspan="3"></th>    </tr>  </thead>  <tbody>    <% @posts.each do |post| %>      <tr>        <td><%= post.title.html_safe %></td>        <td><%= post.event_date %></td>        <td><%= post.body.html_safe %></td>        <td><%= image_tag post.image_url(:thumb).to_s if post.image_url present? %></td>        <td><%= link_to 'Show', post %></td>        <td><%= link_to 'Edit', edit_post_path(post) %></td>        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>      </tr>    <% end %>  </tbody></table><br><%= link_to 'New Post', new_post_path %>